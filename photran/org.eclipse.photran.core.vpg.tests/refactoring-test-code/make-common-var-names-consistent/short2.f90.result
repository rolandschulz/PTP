program common1
  implicit none

  common /block/ aaa, bbb, c
  integer :: aaa
  real :: bbb
  double precision :: c

  aaa = 5
  bbb = 4.6
  c = 2.345
  print *, aaa, bbb, c

  call helper
  print *, aaa, bbb, c
end program common1

subroutine helper
  implicit none
  common /block/ aaa, bbb
  integer :: aaa
  real :: bbb
  
  aaa = 50
  bbb = 40.6
end subroutine helper
