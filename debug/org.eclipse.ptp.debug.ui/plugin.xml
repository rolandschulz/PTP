   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerType="org.eclipse.ptp.debug.core.breakpointMarker"
            super="org.eclipse.debug.core.breakpoint"
            name="org.eclipse.ptp.debug.core.breakpoint">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationImageProvider="org.eclipse.ptp.debug.internal.ui.BreakpointImageProvider"
            colorPreferenceValue="217,255,226"
            annotationType="org.eclipse.ptp.debug.core.breakpointMarker"
            verticalRulerPreferenceValue="true"
            colorPreferenceKey="ptpBreakpointColor"
            highlightPreferenceKey="ptpBreakpointHighlight"
            overviewRulerPreferenceValue="true"
            highlightPreferenceValue="true"
            presentationLayer="3"
            icon="icons/bkpt.gif"
            label="PTP Breakpoint"
            textPreferenceValue="false"
            textPreferenceKey="breakpointIndication"
            verticalRulerPreferenceKey="breakpointIndicationVerticalRuler"
            overviewRulerPreferenceKey="breakpointIndicationOverviewRuler">
      </specification>	
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#CEditorRulerContext"
            id="org.eclipse.cdt.debug.ui.CEditorRulerActions">
         <menu
         	label="PTP Breakpoint"
         	path="debug"
         	id="org.eclipse.ptp.debug.ui.popupmenu.submenu">
         	<separator name="submenu"></separator>
         </menu>
         <action
               label="BreakpointProperties Label"
               class="org.eclipse.ptp.debug.internal.ui.actions.PBreakpointPropertiesRulerActionDelegate"
               menubarPath="org.eclipse.ptp.debug.ui.popupmenu.submenu/submenu"
               id="org.eclipse.ptp.debug.internal.ui.actions.PBreakpointPropertiesRulerActionDelegate">
         </action>
         <action
               label="Enable/Disable Breakpoint"
               class="org.eclipse.ptp.debug.internal.ui.actions.EnableDisableBreakpointRulerActionDelegate"
               menubarPath="org.eclipse.ptp.debug.ui.popupmenu.submenu/submenu"
               id="org.eclipse.ptp.debug.internal.ui.actions.EnableDisableBreakpointRulerActionDelegate">
         </action>
         <action
               label="Add Breakpoint Set"
               class="org.eclipse.ptp.debug.internal.ui.actions.ManageBreakpointRulerActionDelegate"
               menubarPath="org.eclipse.ptp.debug.ui.popupmenu.submenu/submenu"
               id="org.eclipse.ptp.debug.internal.ui.actions.ManageBreakpointRulerActionDelegate">
         </action>
      </viewerContribution>
	</extension>

</plugin>
