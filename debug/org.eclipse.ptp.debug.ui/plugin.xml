<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
    
<!-- create perspective //-->
	<extension
		point="org.eclipse.ui.perspectives">
		<perspective
			name="Parallel Debug"
			icon="icons/ptp.gif"
			class="org.eclipse.ptp.debug.ui.PTPDebugPerspectiveFactory"
			id="org.eclipse.ptp.debug.ui.PTPDebugPerspective"/>
	</extension>   

	<extension
		point="org.eclipse.ui.views">
		<category
			name="Parallel Debug"
			id="org.eclipse.ptp.debug.ui.views">
		</category>
		<view
			name="%DebugParallelView.name"
			icon="icons/ptp.gif"
			category="org.eclipse.ptp.debug.ui.views"
			class="org.eclipse.ptp.debug.ui.views.ParallelDebugView"
			id="org.eclipse.ptp.debug.ui.views.parallelDebugView">
		</view>
	</extension>
