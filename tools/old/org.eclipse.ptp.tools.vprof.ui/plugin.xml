<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Vprof Tools"
            id="org.eclipse.ptp.tools.vprof.ui">
      </category>
      <view
            name="%VprofView.name"
            icon="icons/sample.gif"
            category="org.eclipse.ptp.tools.vprof.ui"
            class="org.eclipse.ptp.tools.vprof.ui.views.VprofView"
            id="org.eclipse.ptp.tools.vprof.ui.views.VprofView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.eclipse.ptp.tools.vprof.views.VprofView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="orc.eclipse.ptp.tools.vprof.internal.ui.VprofPerspectiveFactory"
            id="org.eclipse.ptp.tools.vprof.VprofPerspective"
            name="%perspective.name"/>
   </extension>

</plugin>
