<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.cldt.make.ui"
   name="%pluginName"
   version="3.0.0"
   provider-name="%providerName"
   class="org.eclipse.cldt.make.internal.ui.MakeUIPlugin">

   <runtime>
      <library name="cldtmakeui.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.cldt.core"/>
      <import plugin="org.eclipse.cldt.ui"/>
      <import plugin="org.eclipse.cldt.make.core"/>
      <import plugin="org.eclipse.core.runtime"/>
   </requires>
   <extension-point id="DiscoveryProfilePage" name="%discoveryProfilePage.name" schema="schema/DiscoveryProfilePage.exsd"/>


   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            name="%WizardNewFortranMakeProject.name"
            icon="icons/ctool16/newf_app.gif"
            category="org.eclipse.cldt.ui.newFortranWizards"
            class="org.eclipse.cldt.make.ui.wizards.NewMakeCProjectWizard"
            project="true"
            finalPerspective="org.eclipse.cldt.ui.FortranPerspective"
            id="org.eclipse.cldt.ui.wizards.NewMakeFortranProjectWizard">
         <description>
            %WizardNewCMakeProject.description
         </description>
      </wizard>
<!-- For C++ Wizards -->
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.cldt.core.model.ICProject"
            adaptable="false"
            id="org.eclipse.cldt.make.ui.popupMenu.CViewContribution">
         <action
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewCreateTargetAction">
         </action>
         <action
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewBuildTargetAction">
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.cldt.core.model.ICContainer"
            adaptable="false"
            id="org.eclipse.cldt.make.ui.popupMenu.CViewContribution">
         <action
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewCreateTargetAction">
         </action>
         <action
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewBuildTargetAction">
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.cldt.core.model.ITranslationUnit"
            adaptable="false"
            id="org.eclipse.cldt.make.ui.popupMenu.CViewContribution">
         <action
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewCreateTargetAction">
         </action>
         <action
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewBuildTargetAction">
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.cldt.core.model.IBinary"
            adaptable="false"
            id="org.eclipse.cldt.make.ui.popupMenu.CViewContribution">
         <action
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewCreateTargetAction">
         </action>
         <action
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewBuildTargetAction">
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.cldt.core.model.IArchive"
            adaptable="false"
            id="org.eclipse.cldt.make.ui.popupMenu.CViewContribution">
         <action
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewCreateTargetAction">
         </action>
         <action
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewBuildTargetAction">
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.core.resources.IResource"
            adaptable="false"
            id="org.eclipse.cldt.make.ui.popupMenu.NavigatorContribution">
         <action
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.NavigatorBuildTargetAction">
         </action>
         <action
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="buildGroup"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.CViewCreateTargetAction">
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </objectContribution>
   </extension>
   <extension
      point="org.eclipse.ui.commands">
      <scope
            name="%scope.makefileEditor.name"
            parent="org.eclipse.ui.textEditorScope"
            description="%makefileEditor.description"
            id="org.eclipse.cldt.make.ui.makefileEditorScope">
      </scope>
      <command
            name="%CommandTargetBuild.name"
            description="%CommandTargetBuild.description"
            category="org.eclipse.ui.category.project"
            id="org.eclipse.cldt.make.ui.targetBuildCommand">
      </command>
      <command
            name="%CommandTargetCreate.name"
            description="%CommandTargetCreate.description"
            category="org.eclipse.ui.category.project"
            id="org.eclipse.cldt.make.ui.targetCreateCommand">
      </command>
<!-- Makefile Editor keybindings  -->
      <category
            name="%category.source.name"
            description="%category.source.description"
            id="org.eclipse.cldt.make.ui.category.source">
      </category>
      <command
            name="%ActionDefinition.comment.name"
            description="%ActionDefinition.comment.description"
            category="org.eclipse.cldt.make.ui.category.source"
            id="org.eclipse.cldt.make.ui.edit.text.makefile.comment">
      </command>
      <keyBinding
            string="Ctrl+/"
            scope="org.eclipse.cldt.make.ui.makefileEditorScope"
            command="org.eclipse.cldt.make.ui.edit.text.makefile.comment"
            configuration="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <command
            name="%ActionDefinition.uncomment.name"
            description="%ActionDefinition.uncomment.description"
            category="org.eclipse.cldt.make.ui.category.source"
            id="org.eclipse.cldt.make.ui.edit.text.makefile.uncomment">
      </command>
      <keyBinding
            string="Ctrl+\"
            scope="org.eclipse.cldt.make.ui.makefileEditorScope"
            command="org.eclipse.cldt.make.ui.edit.text.makefile.uncomment"
            configuration="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <command
            name="%ActionDefinition.opendecl.name"
            category="org.eclipse.cldt.make.ui.category.source"
            description="%ActionDefinition.opendecl.description"
            id="org.eclipse.cldt.make.ui.edit.text.makefile.opendecl">
      </command>
      <keyBinding
            string="F3"
            scope="org.eclipse.cldt.make.ui.makefileEditorScope"
            command="org.eclipse.cldt.make.ui.edit.text.makefile.opendecl"
            configuration="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%PreferenceMake.name"
            category="org.eclipse.cldt.ui.preferences.CPluginPreferencePage"
            class="org.eclipse.cldt.make.internal.ui.preferences.MakePreferencePage"
            id="org.eclipse.cldt.make.ui.preferences.MakePreferencePage">
      </page>
      <page
            name="%PreferenceMakeProject.name"
            category="org.eclipse.cldt.make.ui.preferences.MakePreferencePage"
            class="org.eclipse.cldt.make.internal.ui.preferences.NewMakeProjectPreferencePage"
            id="org.eclipse.cldt.make.ui.preferences.MakeProjectPreferencePage">
      </page>
      <page
            name="%PreferenceMakefileEditor.name"
            category="org.eclipse.cldt.make.ui.preferences.MakePreferencePage"
            class="org.eclipse.cldt.make.internal.ui.preferences.MakefileEditorPreferencePage"
            id="org.eclipse.cldt.make.ui.preferences.MakeFileEditorPreferencePage">
      </page>
      <page
            name="%PreferenceMakefileSettings.name"
            category="org.eclipse.cldt.make.ui.preferences.MakeFileEditorPreferencePage"
            class="org.eclipse.cldt.make.internal.ui.preferences.MakefileSettingsPreferencePage"
            id="org.eclipse.cldt.make.ui.preferences.MakefileSettingPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            name="%PropertyMakeProject.name"
            class="org.eclipse.cldt.make.internal.ui.properties.MakePropertyPage"
            id="org.eclipse.cldt.make.ui.properties.MakePropertyPage">
         <filter
               name="nature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </page>
      <page
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            name="%ProjectPathProperties.name"
            nameFilter="*"
            class="org.eclipse.cldt.internal.ui.dialogs.cpaths.CPathPropertyPage"
            id="org.eclipse.cldt.internal.ui.dialogs.cpath.CPathPropertyPage">
         <filter
               name="nature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </page> 
      <!-- Comment this out for now, in the future do ICElementActionFilter to filter things out-->   
      <!--page
            objectClass="org.eclipse.cldt.core.model.ICContainer"
            adaptable="true"
            name="%IncludeSymbolProperties.name"
            class="org.eclipse.cldt.internal.ui.dialogs.cpaths.IncludesSymbolsPropertyPage"
            id="org.eclipse.cldt.internal.ui.dialogs.cpath.IncludeSymbolsPropertyPage">
         <filter
               name="nature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </page-->
      <page
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            name="%IncludeSymbolProperties.name"
            class="org.eclipse.cldt.internal.ui.dialogs.cpaths.IncludesSymbolsPropertyPage"
            id="org.eclipse.cldt.internal.ui.dialogs.cpath.IncludeSymbolsPropertyPage">
         <filter
               name="nature"
               value="org.eclipse.cldt.make.core.makeNature">
         </filter>
      </page>
        
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%ViewCatagoryMake.name"
            id="org.eclipse.cldt.make.ui">
      </category>
      <view
            name="%ViewMake.name"
            icon="icons/cview16/make_target.gif"
            category="org.eclipse.cldt.make.ui"
            class="org.eclipse.cldt.make.ui.views.MakeView"
            id="org.eclipse.cldt.make.ui.views.MakeView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%ActionSetUpdateMake.label"
            id="org.eclipse.cldt.make.ui.updateActionSet">
         <action
               label="%ActionMakeUpdate.label"
               icon="icons/ctool16/update_old.gif"
               tooltip="%ActionMakeUpdate.tooltip"
               class="org.eclipse.cldt.make.ui.actions.UpdateMakeProjectAction"
               toolbarPath="Normal"
               id="org.eclipse.cldt.make.ui.UpdateMakeAction">
            <enablement>
               <and>
                  <not>
                     <objectState
                           value="org.eclipse.cldt.make.core.makeNature"
                           name="projectNature">
                     </objectState>
                  </not>
                  <objectState
                        value="org.eclipse.cldt.core.fnature"
                        name="projectNature">
                  </objectState>
               </and>
            </enablement>
         </action>
      </actionSet>
      <actionSet
            label="%ActionSetMake.label"
            id="org.eclipse.cldt.make.ui.makeTargetActionSet">
         <action
               definitionId="org.eclipse.cldt.make.ui.targetBuildCommand"
               label="%ActionMakeBuildTarget.label"
               class="org.eclipse.cldt.make.ui.actions.BuildTargetAction"
               menubarPath="project/additions"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.makeTargetAction">
            <enablement>
               <or>
                  <objectClass
                        name="org.eclipse.core.resources.IContainer">
                  </objectClass>
                  <objectClass
                        name="org.eclipse.cldt.core.model.ICContainer">
                  </objectClass>
                  <objectClass
                        name="org.eclipse.cldt.core.model.ICProject">
                  </objectClass>
               </or>
            </enablement>
         </action>
         <action
               definitionId="org.eclipse.cldt.make.ui.targetCreateCommand"
               label="%ActionMakeCreateTarget.label"
               class="org.eclipse.cldt.make.ui.actions.CreateTargetAction"
               menubarPath="project/additions"
               enablesFor="1"
               id="org.eclipse.cldt.make.ui.createTargetAction">
            <enablement>
               <or>
                  <objectClass
                        name="org.eclipse.core.resources.IContainer">
                  </objectClass>
                  <objectClass
                        name="org.eclipse.cldt.core.model.ICContainer">
                  </objectClass>
                  <objectClass
                        name="org.eclipse.cldt.core.model.ICProject">
                  </objectClass>
               </or>
            </enablement>
         </action>
      </actionSet>
   </extension>
   
   <!-- Makefile Editor extensions.  -->
   <extension
         id="org.eclipse.cldt.make.editor"
         name="MakefileEditor"
         point="org.eclipse.ui.editors">
      <editor
            name="%MakefileEditor.name"
            icon="icons/obj16/makefile.gif"
            extensions="mk"
            filenames="Makefile,makefile,GNUMakefile"
            contributorClass="org.eclipse.cldt.make.internal.ui.editor.MakefileEditorActionContributor"
            class="org.eclipse.cldt.make.internal.ui.editor.MakefileEditor"
            id="org.eclipse.cldt.make.editor">
      </editor>
   </extension>
   <extension
         id="org.eclipse.cldt.make.ui.MakefileDocumentFactory"
         name="%MakefileDocumentFactory.name"
         point="org.eclipse.core.filebuffers.documentCreation">
      <factory
            extensions="*"
            class="org.eclipse.cldt.make.internal.ui.editor.MakefileDocumentFactory">
      </factory>
   </extension>
   <extension
         id="org.eclipse.cldt.make.ui.MakefileDocumentSetupParticipant"
         name="%MakefileDocumentSetupParticipant.name"
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            extensions="*"
            class="org.eclipse.cldt.make.internal.ui.editor.MakefileDocumentSetupParticipant">
      </participant>
   </extension>
    
   
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipse.cldt.make.internal.ui.MakeStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.cldt.ui.FortranPerspective">
         <view
               relative="org.eclipse.ui.views.ContentOutline"
               visible="true"
               relationship="stack"
               id="org.eclipse.cldt.make.ui.views.MakeView">
         </view>
         <viewShortcut
               id="org.eclipse.cldt.make.ui.views.MakeView">
         </viewShortcut>
         <actionSet
               id="org.eclipse.cldt.make.ui.makeTargetActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>


   <extension
         point="org.eclipse.cldt.ui.PathContainerPage">
      <PathContainerPage
            class="org.eclipse.cldt.make.ui.dialogs.DiscoveredPathContainerPage"
            name="%DiscoveredScannerInfoContainer.name"
            id="org.eclipse.cldt.make.core.DISCOVERED_SCANNER_INFO"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.cldt.make.internal.ui.MakeUIPreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.cldt.make.ui.DiscoveryProfilePage">
      <profilePage
            class="org.eclipse.cldt.make.ui.dialogs.GCCPerProjectSCDProfilePage"
            name="%GCCPerProjectProfile.name"
            profileId="org.eclipse.cldt.make.core.GCCStandardMakePerProjectProfile"/>
   </extension>
   <extension
         point="org.eclipse.cldt.make.ui.DiscoveryProfilePage">
      <profilePage
            class="org.eclipse.cldt.make.ui.dialogs.GCCPerFileSCDProfilePage"
            name="%GCCPerFileProfile.name"
            profileId="org.eclipse.cldt.make.core.GCCStandardMakePerFileProfile"/>
   </extension></plugin>
