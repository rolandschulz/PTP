<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.fdt.core"
   name="%pluginName"
   version="3.0.0"
   provider-name="%providerName"
   class="org.eclipse.fdt.core.FortranCorePlugin">

   <runtime>
      <library name="fdtcore.jar">
         <export name="*"/>
      </library>
      <library name="fdtparser.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.cdt.core"/>
   </requires>

<!-- =================================================================================== -->
<!-- Extension Point: FortranFileType and FortranFileTypeAssociation                     -->
<!--                  for translation unit ident                                         -->
<!-- =================================================================================== -->
<!-- I do not think these are needed, as can use the CDT extension points -->
   <extension-point id="FortranLanguage" name="FortranLanguage" schema="schema/FortranLanguage.exsd"/>
   <extension-point id="FortranFileType" name="FortranFileType" schema="schema/FortranFileType.exsd"/>
   <extension-point id="FortranFileTypeAssociation" name="FortranFileTypeAssociation" schema="schema/FortranFileTypeAssociation.exsd"/>

<!-- =================================================================================== -->
<!-- Define the list of Error Parser provided by the FDT                                 -->
<!-- =================================================================================== -->
   <extension
         id="XLFErrorParser"
         name="%FDTXLFErrorParser.name"
         point="org.eclipse.cdt.core.ErrorParser">
      <errorparser
            class="org.eclipse.fdt.internal.errorparsers.XLFErrorParser">
      </errorparser>
   </extension>
<!-- =================================================================================== -->
<!-- FDT Fortran Nature                                                                  -->
<!-- =================================================================================== -->
   <extension
         id="fnature"
         name="%fnature.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.fdt.core.FortranProjectNature">
         </run>
      </runtime>
   </extension>
<!-- =================================================================================== -->
<!-- FDT file type mappings                                                              -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.cdt.core.CLanguage">
      <language
            name="Fortran"
            id="org.eclipse.fdt.core.language.fortran">
      </language>
   </extension>
   <extension
         point="org.eclipse.cdt.core.CFileType">
      <fileType
            name="%fileTypeMapping.fortranSourceFile"
            type="source"
            id="org.eclipse.fdt.core.fileType.fortran_source"
            language="org.eclipse.fdt.core.language.fortran">
      </fileType>
      <fileType
            name="%fileTypeMapping.fortranHeaderFile"
            type="header"
            id="org.eclipse.fdt.core.fileType.fortran_header"
            language="org.eclipse.fdt.core.language.fortran">
      </fileType>
   </extension>
   <extension
         point="org.eclipse.cdt.core.CFileTypeAssociation">
      <association
            type="org.eclipse.fdt.core.fileType.fortran_source"
            pattern="*.f,*.f77,*.f90,*.f95">
      </association>
      <association
            type="org.eclipse.fdt.core.fileType.fortran_header"
            pattern="*.fh">
      </association>
   </extension>
<!-- =================================================================================== -->
<!-- Some well known Fortran file extensions override for the team plugins               -->
<!-- =================================================================================== -->
   <extension
         point="org.eclipse.team.core.fileTypes">
      <fileTypes
            type="text"
            extension="f">
      </fileTypes>
      <fileTypes
            type="text"
            extension="f77">
      </fileTypes>
      <fileTypes
            type="text"
            extension="f90">
      </fileTypes>
      <fileTypes
            type="text"
            extension="f95">
      </fileTypes>
      <fileTypes
            type="text"
            extension="fh">
      </fileTypes>
   </extension>

<!-- =================================================================================== -->
<!-- Define Fortran files ContentTypes                                                   -->
<!-- =================================================================================== -->
  <extension point="org.eclipse.core.runtime.contentTypes">
	  <!-- declares a content type for Fortran source files -->
	  <content-type id="fortranSource" name="%fortranSourceName" 
		  base-type="org.eclipse.core.runtime.text"
		  priority="high"/>
	  <!-- declares a content type for Fortran header files -->
      <content-type id="fortranHeader" name="%fortranHeaderName" 
          base-type="org.eclipse.fdt.core.fortranSource"
          priority="high"/>
  </extension>

   <extension point="org.eclipse.core.runtime.contentTypes"> 
      <file-association 
       content-type="org.eclipse.fdt.core.fortranSource"
       file-extensions="f,f77,f90,f95"/>
   </extension> 

   <extension point="org.eclipse.core.runtime.contentTypes"> 
      <file-association 
       content-type="org.eclipse.fdt.core.fortranHeader"
       file-extensions="fh"/>
   </extension> 

<!-- =================================================================================== -->
<!-- Initialize the preference for the Core Plugin                                       -->
<!-- =================================================================================== -->
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.fdt.internal.core.FortranCorePreferenceInitializer"/>
   </extension>
 
</plugin>
