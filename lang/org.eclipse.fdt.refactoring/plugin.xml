<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <!-- Action set for refactoring menu (additions) -->
   <extension
         id="org.eclipse.photran.extractinterface.menu"
         name="Extract"
         point="org.eclipse.ui.popupMenus">
   </extension>

   <extension
         id="org.eclipse.photran.extractinterface.extractmenu"
         name="Extract Menu"
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Photran Refactoring Action Set"
            visible="true"
            id="org.eclipse.photran.refactoring.actionSet">
         <action
               label="&amp;Extract Interface"
               class="org.eclipse.photran.core.RefactorAction"
               tooltip="Hello, Eclipse world"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/reorgGroup"
               id="org.eclipse.photran.refactoring.actions.RefactorAction">
         </action>
      </actionSet>
   </extension>

   <extension point="org.eclipse.ui.popupMenus">
      <viewerContribution 
            targetID="#CEditorContext" 
            id="org.eclipse.photran.refactoring.extractinterface">
         <action 
               label="Extract Interface" 
               class="org.eclipse.photran.extractinterface.ExtractInterfaceEditorActionDelegate" 
               menubarPath="org.eclipse.cdt.ui.refactoring.menu/reorgGroup" 
               id="org.eclipse.photran.refactoring.extractinterface.action">
         </action>
      </viewerContribution>
   </extension>

</plugin>
