<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension
		point="org.eclipse.ui.views">
		<category
			name="%ParallelViewCategory.name"
			id="org.parallel.ptp.ui.views">
		</category>
		<view
			name="%ParallelControlView.name"
			icon="icons/parallel_perspective.gif"
			category="org.parallel.ptp.ui.views"
			class="org.eclipse.ptp.ui.views.ParallelProcessesView"
			id="org.eclipse.ptp.ui.views.parallelProcessesView">
		</view>
		<view
			name="%ParallelJobsView.name"
			icon="icons/parallel_perspective.gif"
			category="org.parallel.ptp.ui.views"
			class="org.eclipse.ptp.ui.views.ParallelJobsView"
			id="org.eclipse.ptp.ui.views.parallelJobsView">
		</view>
		<view
			name="%ParallelNodeView.name"
			icon="icons/parallel_perspective.gif"
			category="org.parallel.ptp.ui.views"
			class="org.eclipse.ptp.ui.views.ParallelNodeStatusView"
			id="org.eclipse.ptp.ui.views.parallelNodeStatusView">
		</view>
	</extension>

	<extension
		point="org.eclipse.ui.editors">
		<editor
			name="%ParallelProcessView.name"
			icon="icons/parallel_perspective.gif"
            default="true"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"            
			class="org.eclipse.ptp.ui.views.ParallelProcessViewer"
			id="org.eclipse.ptp.ui.views.parallelProcessViewer">
		</editor>
	</extension>
	
	<extension
		point="org.eclipse.ui.perspectives">
		<perspective
			icon="icons/parallel_perspective.gif"
			class="org.eclipse.ptp.internal.ui.PRunPerspectiveFactory"
			name="%perspective.name"
			id="org.eclipse.ptp.ui.PRunPerspective"/>
	</extension>   

<!-- create preference page //-->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%preferencePages.name"
            class="org.eclipse.ptp.ui.preferences.PTPPreferencesPage"
            id="org.eclipse.ptp.ui.preferences.ptpPreferencesPage">
      </page>
      <page
            name="%SimulationpreferencePage.name"
            class="org.eclipse.ptp.ui.preferences.SimulationPreferencesPage"
            id="org.eclipse.ptp.ui.preferences.simulationPreferencesPage"
            category="org.eclipse.ptp.ui.preferences.ptpPreferencesPage">
      </page>
      <page
            name="%OMPIpreferencePage.name"
            class="org.eclipse.ptp.ui.preferences.OMPIPreferencesPage"
            id="org.eclipse.ptp.ui.preferences.ompiPreferencesPage"
            category="org.eclipse.ptp.ui.preferences.ptpPreferencesPage">
      </page>
   </extension>
   
<!-- add buttons to editor action toolbar //-->
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%actionSets.name"
            visible="false"
            id="org.eclipse.ptp.actionSets">
         <action
               label="%legendAction.name"
               icon="icons/legend.gif"
               class="org.eclipse.ptp.ui.actions.ShowLegendAction"
               tooltip="%legendAction.tooltip"
               toolbarPath="org.eclipse.ptp.actionSets"
               id="org.eclipse.ptp.ui.actions.showLegendAction">
         </action>
         <!--
         <action
               label="%searchAction.name"
               icon="icons/search.gif"
               class="org.eclipse.pdt.ui.actions.SearchAction"
               tooltip="%searchAction.tooltip"
               toolbarPath="org.eclipse.pdt.actionSets"
               id="org.eclipse.pdt.ui.actions.searchAction">
         </action>
         //-->
      </actionSet>
   </extension>
   
   <extension
         id="org.eclipse.ptp.ui.PSearchPage"
         name="PSearchPage"
         point="org.eclipse.search.searchPages">
      <page
            showScopeSection="false"
            label="%PSearchPage.label"
            icon="icons/search.gif"
            class="org.eclipse.ptp.internal.ui.search.PSearchPage"
            sizeHint="360, 160"
            id="org.eclipse.ptp.ui.PSearchPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="org.eclipse.ptp.internal.ui.search.PSearchResultPage"
            searchResultClass="org.eclipse.ptp.internal.ui.search.PSearchResult"
            id="org.eclipse.ptp.ui.PSearchResultPage">
      </viewPage>
   </extension> 
</plugin>
